    <!-- Contact Section -->
    <section id="contato-form" class="contact-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Fale Conosco</h2>
                <p class="section-subtitle">Preencha o formulário abaixo e entraremos em contato em breve!</p>
                <div class="section-divider"></div>
            </div>
            <div class="contact-content">
                <div class="contact-info" id="contato-info">
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt contact-icon"></i>
                        <div>
                            <h3>Localização</h3>
                            <p>São Paulo, SP - Brasil</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone contact-icon"></i>
                        <div>
                            <h3>Telefone</h3>
                            <p>(11) 9999-9999</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope contact-icon"></i>
                        <div>
                            <h3>E-mail</h3>
                            <p>contato@aventurapet.com</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-clock contact-icon"></i>
                        <div>
                            <h3>Horário de Atendimento</h3>
                            <p>Segunda a Sexta: 8h às 18h</p>
                        </div>
                    </div>
                </div>
                <form class="contact-form" id="contatoForm">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="nome">Nome Completo</label>
                            <input type="text" id="nome" name="nome" placeholder="Seu nome completo" required>
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="email" id="email" name="email" placeholder="seu.email@exemplo.com" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="assunto">Assunto</label>
                        <select id="assunto" name="assunto" required>
                            <option value="">Selecione um assunto</option>
                            <option value="adocao">Adoção de Pets</option>
                            <option value="doacao">Doação de Pets</option>
                            <option value="produtos">Produtos e Loja</option>
                            <option value="parceria">Parcerias</option>
                            <option value="suporte">Suporte Técnico</option>
                            <option value="outros">Outros</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="mensagem">Mensagem</label>
                        <textarea id="mensagem" name="mensagem" placeholder="Conte-nos como podemos ajudar..." required></textarea>
                    </div>
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i>
                        Enviar Mensagem
                    </button>
                </form>
            </div>
        </div>
    </section>
    <script>document.getElementById('current-page').textContent = 'Contato';</script>
