    <script>
        // Custom checkbox functionality
        document.querySelectorAll('.checkbox-item').forEach(item => {
            item.addEventListener('click', function() {
                const checkbox = this.querySelector('input[type="checkbox"]');
                const customCheckbox = this.querySelector('.checkbox-custom');
                const checkIcon = this.querySelector('.fa-check');

                if (checkbox.checked) {
                    checkbox.checked = false;
                    customCheckbox.style.borderColor = 'var(--border-light)';
                    customCheckbox.style.backgroundColor = 'transparent';
                    checkIcon.style.transform = 'translate(-50%, -50%) scale(0)';
                } else {
                    checkbox.checked = true;
                    customCheckbox.style.borderColor = 'var(--accent-yellow)';
                    customCheckbox.style.backgroundColor = 'var(--accent-yellow)';
                    checkIcon.style.transform = 'translate(-50%, -50%) scale(1)';
                }
            });
        });
    </script>
